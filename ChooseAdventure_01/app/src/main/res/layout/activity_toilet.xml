<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_toilet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.chooseadventure_01.MainActivity"
    android:weightSum="1"
    android:background="@android:color/holo_green_light">

    <TextView
        android:text="Choose Your Own Adventure 01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:text="Story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_story"
        android:textAlignment="viewStart"
        android:textSize="23sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:text="Question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_question"
        android:textSize="23sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_weight="0.12">

        <Button
            android:text="LeftButton"
            android:layout_width="wrap_content"
            android:id="@+id/button_left"
            android:layout_weight="1"
            android:layout_height="100dp" />

        <Button
            android:text="RightButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/button_right"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
